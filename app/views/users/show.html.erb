<% flash.each do |name, msg| %>
  <div class="alert <%= name == 'error' ? 'alert-danger' : 'alert-info' %>">
    <div class="container">
      <%= msg %>
    </div>
  </div>
<% end %>

<div>
  <img class="stock" src="/assets/exchange.jpg">
    <h1 class="overlay"><span>Welcome <%= @user.first_name %> <%= @user.last_name %></span></h1>
</div>

<div class="container">
  <h1>My Profile</h1>
  <hr>
  <div class="col-lg-6 col-lg-offset-3">
      <div>
        <h1>Hello <%= @user.first_name %> <%= @user.last_name %></h1>
        <p>Welcome to your user page.</p>
      </div>
      <div>
        <ul>
          <li>Name: <%= @user.first_name %> <%= @user.last_name %></li>
          <li>email: <%= @user.email %></li>
        </ul>
        <% if current_user == @user %>
          <a href="/users/<%= @user.id %>/edit" class= "btn btn-success btn-lg">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
          </a>

          <%= button_to "Delete profile", @user, method: :delete, class: "btn btn-danger btn-lg"  %>
        <% end %>  
      </div>
  </div>
</div>
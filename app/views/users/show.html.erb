<div class="users">
  <h1 class="overlay"><span>Welcome <%= @user.first_name %> <%= @user.last_name %></span></h1>
</div>
<% flash.each do |name, msg| %>
  <div class="alert <%= name == 'error' ? 'alert-danger' : 'alert-info' %>">
    <div class="container">
      <%= msg %>
    </div>
  </div>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-lg-5 col-lg-offset-4">
      <h1>My Profile</h1>
      <hr>
    <div>
        <h3>Hello <%= @user.first_name %> <%= @user.last_name %></h3>
        <p>Welcome to your user page.</p>
      </div>
      <div class="panel panel-default">
        <ul>
          <li>Name: <%= @user.first_name %> <%= @user.last_name %></li>
          <li>Email: <%= @user.email %></li>
        </ul>
        <% if current_user == @user %>
        <div class="btn-group">

          <a href="/users/<%= @user.id %>/edit" class= "btn btn-success btn-lg">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
          </a>
        </div>
        <div class="btn-group">
          <%= button_to "Delete profile", @user, method: :delete, class: "btn btn-danger btn-lg"  %>
        <% end %>  
      </div>
    </div>      
      <div class="panel panel-default">
        <h1>Portfolio</h1>
        <% @mutualfunds.each do |mf| %>
        <ul>
          <li><%= link_to mf.name, mutual_fund_path(mf) %></li>
        </ul>          
        <% end %>
      </div>
  </div>
</div>
</div>
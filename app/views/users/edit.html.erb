<div class="container">
  <div class="row">
      <div class="col-lg-5 col-lg-offset-4">
        <% flash.each do |name, msg| %>
          <div class="alert <%= name == 'error' ? 'alert-danger' : 'alert-info' %>">
          <div class="container">
            <%= msg %>
          </div>
      </div>
        <% end %>
<h1>Edit Profile</h1>
         <hr>	     
  <%= form_for @user, :html => {:class => "form-horizontal center-block"} do |f|%>
    <div class="form-group">
      <%= f.label :first_name, "first name", class: "control-label" %>
      <%= f.text_field :first_name, :required => true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :last_name, "last name", class: "control-label" %>
      <%= f.text_field :last_name, :required => true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :email, "email", class: " control-label" %>
      <%= f.text_field :email, :required => true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password, "password", class: "control-label" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password, "Password Confirmation", class: "control-label" %>
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password" %>
    </div>  
    <div class="form-group">
      <%= f.submit "Update Profile", class: "btn btn-default  center-bl form-control" %>
    </div>
  <% end %>
</div>
</div>
</div>
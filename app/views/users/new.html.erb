<div class="jumbotron">
    <h1 class="overlay"><span>Sign Up</span></h1>
</div>

<% flash.each do |name, msg| %>
  <div class="alert <%= name == 'error' ? 'alert-danger' : 'alert-info' %>">
    <div class="container">
      <%= msg %>
    </div>
  </div>
<% end %>

<div class="container">
  <div class="row">
      <div class="col-lg-5 col-lg-offset-4">
<!-- <h1>Signup</h1>
  <hr> -->
        <%= form_for @user, url: "/users", method: "post" do |f| %>
    <div class="form-group">
      <%= f.label :first_name, "First Name", class: "control-label" %>
      <%= f.text_field :first_name, :required => true, class: "form-control", placeholder: "John" %>
    </div>
    <div class="form-group">
      <%= f.label :last_name, "Last Name", class: "control-label" %>
      <%= f.text_field :last_name, :required => true, class: "form-control", placeholder: "Doe" %>
    </div>
    <div class="form-group">
      <%= f.label :email, "Email", class: " control-label" %>
      <%= f.text_field :email, :required => true, class: "form-control", placeholder: "email@example.com" %>
    </div>
    <div class="form-group">
      <%= f.label :password, "Password", class: "control-label" %>
      <%= f.password_field :password, :required => true, class: "form-control", placeholder: "Your Password" %>
    </div>  
    <div class="form-group">
      <%= f.label :password, "Password Confirmation", class: "control-label" %>
      <%= f.password_field :password_confirmation, :required => true, class: "form-control", placeholder: "Confirm Password" %>
    </div>
    <div class="form-group">
      <%= f.submit "Submit", class: "btn btn-default  center-bl form-control" %>
    </div>
  <% end %>  
</div>
</div>
</div>
<p>Already have an account? <a href="/login">Click here</a> to log in.</p>
</div>
</div>
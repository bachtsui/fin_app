<div class="users">
  <h1 class="overlay"><span>User Login</span></h1>
</div>
<div class="container">
  <div class="row">
      <div class="col-lg-5 col-lg-offset-4">
        <%= form_for @user, url: "/sessions", method: "post" do |f| %>
        <div class="form-group">
          <%= f.label :email, "Email", class: " control-label" %>
          <%= f.text_field :email, :required => true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :password, "Password", class: "control-label" %>
          <%= f.password_field :password, :required => true, class: "form-control" %>
        </div> 
        <div class="form-group">
          <%= f.submit "Submit", class: "btn btn-default  center-bl form-control" %> 
        </div>
        <% end %>
    </div>
  </div>
</div>
  <br>
    <p>Don't have an account? <a href="/signup">Click here</a> to sign up.</p>
  </div>
</div>  
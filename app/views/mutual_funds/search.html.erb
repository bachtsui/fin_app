<div class="container" id="mutualfunds">
  <div class="row">
    <div class="col-lg-5 col-lg-offset-4">
      
<!--  Search Form -->

      <%= form_tag(mf_search_path, :method => "get", id: "search-form") do %>
	      <div class="form-group">
	       	<%= label_tag :search, "Search Mutual Funds by Industry:", class:"control-label" %>
	        <%= text_field_tag :search, params[:search], placeholder: "Oil, Technology, Finance", class:"form-control" %>
	      </div>

	      <div class="form-group">
	        <%= submit_tag "Search", class: "btn btn-default  center-bl form-control" %>
	      </div>
      <% end %>

			<br>
      <!-- PRINTS NAME OF EACH MF WITH GIVEN INDUSTRY -->
			<% @mutualfunds.each do |x| %>
				<p> <%= link_to x.name, mutual_fund_path(x) %> </p>
				<hr>
			<% end %>
  
    </div>
  </div> 
</div>